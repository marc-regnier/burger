{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

{% if items | length > 0 %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{item.menu.nom}}</td>
                    <td>{{item.menu.prix}}</td>
                    <td>{{item.quantity}}</td>
                    <td>{{item.menu.prix * item.quantity}}</td>
                    <td>
                        <a href="{{path('panier_remove', {'id' : item.menu.id})}}" class="btn btn-danger btn-sm"></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total : </td>
                <td>{{total}}</td>
                <td></td>
            </tr>
        </tfoot>

    </table>
    {% else %}
    <p>Le panier est vide!!!</p>
{% endif %}    

{% endblock %}
