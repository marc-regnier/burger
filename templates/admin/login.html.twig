{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="container mb-3 mt-3">
    {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    <h1>Login</h1>
    {% if error %}
    <div class="alert alert-danger">
        Erreur
    </div>

    {% endif %}
    <form action="{{path('login')}}" method="POST">
        <div class="form-group">
            <label>Username :</label>
            <input type="text" required name="_username" class="form-control" value="{{lastUserName}}">
        </div>
        <div class="form-group">
            <label>Password :</label>
            <input type="password" required name="_password" class="form-control">
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-primary" name="login" value="s'identifier">
        </div>
    </form>
</section>
{% endblock %}