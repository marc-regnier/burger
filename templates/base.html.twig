<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{% block title %}Welcome!{% endblock %}</title>
  {% block stylesheets %}
  {{ encore_entry_link_tags('app')}}
  <link rel="stylesheet" href="https://bootswatch.com/4/materia/bootstrap.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  

  {% endblock %}
</head>

<body>

  <h1 class="text-center">{% block titre %}{% endblock %}</h1>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">FastBurger</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02"
      aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="{{path('home')}}">Accueil</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="{{path('menu', {id : 1})}}">Menus</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('menu', {id : 2})}}">Burgers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('menu', {id : 3})}}">Snack</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('menu', {id : 4})}}">Salades</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('menu', {id : 5})}}">Boissons</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('menu', {id : 6})}}">Desserts</a>
        </li>
       
        
        {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item">
          <a class="nav-link" href="{{path('admin_menu')}}">Administration</a>
        </li>
        {% endif %}

        {% if not app.user %}
        <li class="nav-item">
          <a class="nav-link" href="{{path('login')}}">Connexion</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('inscription')}}">Inscription</a>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{path('account_index')}}">Mon Compte</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('logout')}}">DÃ©connexion</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{path('panier')}}">Panier</a>
        </li>
        {% endif %}
      </ul>
    </div>
  </nav>
  {% block body %}{% endblock %}
  {% block javascripts %}
  {{ encore_entry_script_tags('app')}}
  {% endblock %}
</body>

</html>